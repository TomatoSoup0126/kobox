{
  "manifest_version": 3,
  "name": "KoBox",
  "version": "0.1",
  "description": "Find Optimal Checkout Combinations",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.kobo.com/*"
  ],
  "icons": {
    "16": "dist/icons/icon-16.png",
    "32": "dist/icons/icon-32.png",
    "48": "dist/icons/icon-48.png",
    "128": "dist/icons/icon-128.png"
  },
  "action": {
    "default_popup": "/dist/popup.html",
    "default_title": "KoBox",
    "default_icon": {
      "16": "dist/icons/icon-16.png",
      "32": "dist/icons/icon-32.png",
      "48": "dist/icons/icon-48.png",
      "128": "dist/icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.kobo.com/*/wishlist*"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/dist/popup.html"],
      "matches": ["https://www.kobo.com/*"]
    }
  ]
}
